{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["es2018", "esnext.asynciterable", "dom"]
  },
  "include": ["src/**/*", "config/*", "assets/*", "scripts/*"]
}
